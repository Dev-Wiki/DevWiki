<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.devwiki.devwiki">

    <application
        android:name=".DevWikiApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.HOME"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".widget.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".module.view.activity.LaunchModeActivity"/>
        <activity
            android:name=".module.view.activity.StandardActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".module.view.activity.SingleInstanceActivity"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".module.view.activity.SingleTaskActivity"
            android:launchMode="singleTask"
            android:taskAffinity=""/>
        <activity
            android:name=".module.view.activity.SingleTopActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".module.thread.rxjava.RxJavaActivity">
        </activity>
        <activity
            android:name=".module.view.i18n.I18nActivity"
            android:label="@string/title_activity_i18n">
        </activity>
    </application>

</manifest>