<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.devwiki.devwiki">

    <application
        android:name=".base.DevWikiApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.recycler.RecyclerActivity"
            android:label="RecyclerActivity">
        </activity>
        <activity
            android:name=".ui.BottomNavActivity"
            android:label="BottomNavActivity">
        </activity>
        <activity
            android:name=".ui.TextViewActivity"
            android:label="@string/title_activity_text_view">
        </activity>
        <activity
            android:name=".ui.edit.EditTextActivity"
            android:label="@string/title_activity_edit_text">
        </activity>
        <activity android:name=".base.BaseActivity">
        </activity>
        <activity
            android:name=".ui.list.ListViewActivity"
            android:label="ListViewActivity">
        </activity>
        <activity
            android:name=".ui.edit.OneInputActivity"
            android:label="OneInputActivity"
            android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
        <activity
            android:name=".ui.edit.OneInputAllActivity"
            android:label="OneInputAllActivity"
            android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
        <activity
            android:name=".ui.edit.OneInputAll2Activity"
            android:label="OneInputAll2Activity"
            android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
        <activity
            android:name=".ui.edit.TwoInputActivity"
            android:label="TwoInputActivity"
            android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
        <activity
            android:name=".ui.edit.TwoInput2Activity"
            android:label="TwoInput2Activity"
            android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
        <activity
            android:name=".ui.edit.TwoInputAllActivity"
            android:label="TwoInputAllActivity"
            android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
        <activity android:name=".ui.badge.BadgeActivity">
        </activity>
    </application>

</manifest>